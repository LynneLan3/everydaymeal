.pot-lid {
  position: absolute;
  left: 50%;
  bottom: 120%;
  transform: translateX(-50%) scale(0.5) rotate(0deg);
  font-size: 80rpx;
  opacity: 0;
  transition: all 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  z-index: 100;
  pointer-events: none;
  transform-origin: center bottom;
}

.lid-active {
  opacity: 1;
  transform: translateX(-50%) scale(1.2) rotate(-45deg) translate(-40rpx, -40rpx);
}

/* Ê∑ªÂä†Ëí∏Ê±ΩÊïàÊûú */
@keyframes steam {
  0% {
    transform: translateY(0) scale(1);
    opacity: 0.8;
  }
  50% {
    transform: translateY(-20rpx) scale(1.2);
    opacity: 0.5;
  }
  100% {
    transform: translateY(-40rpx) scale(1.5);
    opacity: 0;
  }
}

.pot-lid::after {
  content: "üí®";
  position: absolute;
  top: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 40rpx;
  opacity: 0;
  animation: steam 1s ease-out infinite;
  display: none;
}

.lid-active::after {
  display: block;
}
