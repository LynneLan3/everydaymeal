/**index.wxss**/
page {
  background: #f7f9fc;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 56rpx;
  font-weight: 600;
  color: #2c3e50;
  display: block;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 32rpx;
  color: #7f8c8d;
}

.recipe-swiper {
  flex: 1;
  width: 100%;
  height: 600rpx;
  margin-bottom: 60rpx;
}

.recipe-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.recipe-image {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  object-fit: cover;
}

.recipe-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.recipe-info {
  text-align: center;
}

.recipe-name {
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  display: block;
  color: #2c3e50;
}

.recipe-desc {
  font-size: 32rpx;
  color: #7f8c8d;
  display: block;
  line-height: 1.5;
}

.recipe-meta {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  gap: 30rpx;
}

.meta-item {
  font-size: 28rpx;
  color: #95a5a6;
  background: #f8f9fa;
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
}

.action-buttons {
  display: flex;
  justify-content: center;
  gap: 30rpx;
  padding: 20rpx 0;
}

.btn-wrapper {
  position: relative;
  flex: 1;
}

.btn {
  flex: 1;
  height: 100rpx;
  border-radius: 50rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
  position: relative;
  z-index: 10;
}

.btn-skip {
  background: #e74c3c;
  color: white;
}

.btn-skip:active {
  transform: scale(0.98);
  background: #c0392b;
}

.btn-start {
  background: #27ae60;
  color: white;
}

.btn-start:active {
  transform: scale(0.98);
  background: #219a52;
}

.trash-can {
  position: absolute;
  left: 50%;
  bottom: 120%;
  transform: translateX(-50%) scale(0.5);
  font-size: 80rpx;
  opacity: 0;
  transition: all 0.3s ease;
  z-index: 100;
  pointer-events: none;
}

.trash-active {
  opacity: 1;
  transform: translateX(-50%) scale(1.2);
}

.daily-info {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
  display: flex;
  justify-content: center;
  align-items: center;
}

.daily-info .divider {
  margin: 0 20rpx;
  color: #ddd;
}

/* ÊâîÊéâÂä®Áîª */
@keyframes throwAway {
  0% {
    transform: translate(0, 0) rotate(0deg) scale(1);
    opacity: 1;
  }
  40% {
    transform: translate(-100rpx, 100rpx) rotate(-15deg) scale(0.8);
    opacity: 0.8;
  }
  70% {
    transform: translate(-150rpx, 200rpx) rotate(-25deg) scale(0.6);
    opacity: 0.5;
  }
  100% {
    transform: translate(-200rpx, 300rpx) rotate(-35deg) scale(0.2);
    opacity: 0;
  }
}

.throw-away {
  animation: throwAway 0.5s ease-in forwards;
  transform-origin: center center;
}

